<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basiclab.iot.message.mapper.MessageConfigMapper">
    <resultMap id="BaseResultMap" type="com.basiclab.iot.message.domain.entity.MessageConfig">
        <id column="id" property="id"/>
        <result column="msg_type"  property="msgType"/>
        <result column="creator_id"  property="creatorId"/>
        <result column="create_time"  property="createTime"/>
        <result column="configuration"  property="configuration"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, msg_type, creator_id, create_time, configuration
    </sql>
    <select id="selectById"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message_config
        where id = #{id}
    </select>
    <delete id="delete">
        delete
        from message_config
        where id = #{id}
    </delete>
    <insert id="add" parameterType="com.basiclab.iot.message.domain.entity.MessageConfig">
        insert into message_config (id, msg_type, creator_id,
                                create_time, configuration)
        values (#{id}, #{msgType},
                #{creatorId}, #{createTime}, #{configuration}
               )
    </insert>
    <update id="update" parameterType="com.basiclab.iot.message.domain.entity.MessageConfig">
        update message_config
        <set>
            <if test="msgType != null">
                msg_type = #{msgType},
            </if>
            <if test="creatorId != null">
                creator_id = #{creatorId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="configuration != null">
                configuration = #{configuration},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectList" parameterType="com.basiclab.iot.message.domain.entity.MessageConfig"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message_config
        <where>
            <if test="messageConfig.msgType != null and messageConfig.msgType != ''">
                msg_type = #{messageConfig.msgType}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectByMsgType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message_config
        where msg_type = #{msgType}
    </select>

</mapper>